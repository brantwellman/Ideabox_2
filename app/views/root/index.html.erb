<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>IdeaBox</title>
</head>
<body>
  <div class="col-md-4 col-md-offset-4">
    <h1>The IdeaBox</h1>
  </div>

  <h2>Add a New Idea</h2>
  <%= form_tag '/api/v1/ideas' do %>
    <%= label_tag 'Title' %>
    <%= text_field_tag 'Title' %>
    <%= label_tag 'Body' %>
    <%= text_field_tag 'Body' %>
  <% end %>

  <div class="col-md-4 col-md-offset-4">
    <h2>All of the Ideas</h2>
    <div id="all-ideas">
    </div>
  </div>

  <div class="all-ideas">

  </div>




</body>
</html>
